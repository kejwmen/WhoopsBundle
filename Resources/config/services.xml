<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="kejwmen_whoops.run" class="Kejwmen\WhoopsBundle\Handler\WhoopsHandler" public="false">
        </service>
        <service id="kernel.listener.kejwmen_whoops_handler" class="Kejwmen\WhoopsBundle\EventListener\Listener">
            <argument type="service" id="kejwmen_whoops.run" />
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException"/>
        </service>
    </services>
</container>
